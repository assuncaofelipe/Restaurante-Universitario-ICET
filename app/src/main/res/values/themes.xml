<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema padrão da aplicação -->
    <style name="Theme.MeuRU" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde_primary</item>
        <item name="colorPrimaryVariant">@color/verde_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetAPI="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- SplashScreen -->
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/cor_verde</item>
        <item name="android:statusBarColor" tools:targetAPI="l">@color/background_splash_screen</item>
    </style>

    <!-- Login -->
    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetAPI="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Estilo da toolbar -->
    <style name="Theme.MeuRU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- seta a cor no status bar (barrinha em cima da toolbar) -->
        <item name="android:statusBarColor" tools:targetAPI="l">@color/cor_verde</item>
    </style>

    <!-- Estilo de drawables -->
    <style name="Theme.MeuRU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MeuRU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>